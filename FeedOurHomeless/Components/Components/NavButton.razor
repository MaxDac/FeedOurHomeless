<li>
  <a href="@Href"
    class="block text-white bg-brand rounded md:bg-transparent md:text-gray-900 hover:text-brand transition ease-in-out duration-300 @PaddingClass"
    aria-current="page">@Title</a>
</li>

@code {

  [Parameter]
  public required string Href { get; set; }

  [Parameter]
  public required string Title { get; set; }

  [Parameter]
  public bool IsInDropdown { get; set; }

  private string PaddingClass =>
    IsInDropdown 
      ? "py-4 px-4"
      : "py-2 px-3 md:p-0";

}
