<li>
  <button
    id="@ContainerId" 
    data-dropdown-toggle="@IdNavbar"
    class="flex items-center justify-between w-full py-2 px-3 text-gray-900 hover:bg-gray-100 md:hover:bg-transparent md:border-0 md:hover:text-brand md:p-0 md:w-auto transition ease-in-out duration-300">
      @Title
      <svg class="w-2.5 h-2.5 ms-2.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none"
        viewBox="0 0 10 6">
        <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="m1 1 4 4 4-4" />
      </svg>
  </button>
  <!-- Dropdown menu -->
  <div id="@IdNavbar"
    class="z-10 hidden font-normal bg-white divide-y divide-gray-100 rounded-lg shadow w-44">
      @ChildContent
  </div>
</li>

@code {

  [Parameter]
  public required string ContainerId { get; set; }

  private string IdNavbar => $"{ContainerId}-Navbar";

  [Parameter]
  public required string Title { get; set; }

  [Parameter]
  public required RenderFragment ChildContent { get; set; }

}
